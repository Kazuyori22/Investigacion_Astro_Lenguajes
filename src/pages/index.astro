---
import FormsBlogs from "../components/FormsBlogs.astro";
import BlogLayout from "../layouts/BlogLayout.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mi Blog - Landing Page</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        text-align: center;
        background: linear-gradient(135deg, #1a2a6c, #3e5fb2, #7273cb);
        color: white;
      }
      header {
        padding: 20px;
        font-size: 24px;
        font-weight: bold;
      }
      .hero {
        padding: 50px;
      }
      .buttons {
        margin-top: 20px;
      }
      .btn {
        padding: 10px 20px;
        font-size: 18px;
        border: none;
        cursor: pointer;
        margin: 10px;
        border-radius: 5px;
        transition: 0.3s;
      }
      .btn-login {
        background: #ff5722;
        color: white;
      }
      .btn-register {
        background: #4caf50;
        color: white;
      }
      .btn:hover {
        opacity: 0.8;
      }
    </style>
  </head>
  <body>
    <header>Mi Blog</header>
    <section class="hero">
      <h1>Bienvenido a Mi Blog</h1>
      <p>Explora contenido interesante y mantente informado.</p>
      <div class="buttons">
        <a href="/login"
          ><button class="btn btn-login">Iniciar Sesión</button></a
        >
        <a href="/register"
          ><button class="btn btn-register">Registrarse</button></a
        >
      </div>
      <FormsBlogs />
      <BlogLayout />
      <!-- Video de fondo -->
      <video autoplay muted loop id="background-video">
        <source src="/assets/fondo5.mp4" type="video/mp4" />
        Tu navegador no soporta el formato de video.
      </video>

      <!-- El contenido del blog -->
      <!-- <div class="blogs-container"> -->
      <!-- Aquí iría el contenido de tus blogs -->
    </section>
  </body>
</html>
<style>
  /* Fondo de video */
  #background-video {
    position: fixed; /* Fija el video en el fondo */
    top: 0;
    left: 0;
    width: 100%; /* Ocupa todo el ancho */
    height: 100%; /* Ocupa todo el alto */
    object-fit: cover; /* Asegura que cubra toda la pantalla sin distorsión */
    z-index: -1; /* Asegura que el video esté detrás del contenido */
  }

 
</style>
