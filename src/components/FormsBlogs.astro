<form class="blog-form" id="blogForm">
  <input type="text" id="title" placeholder="Titulo del blog" required />
  <textarea id="content" placeholder="Contenido del blog" rows="4" required
  ></textarea>

  <!-- Sección de selección de imagen -->

  <div class="image-selection">
    <label for="imageSelect">Selecciona una imagen:</label>
    <div class="image-buttons">
      <button type="button" class="image-button" data-image="../assets/1.png">
        <span
          class="image-option"
          style="background-image: url('../assets/1.png');"></span>
      </button>
      <button type="button" class="image-button" data-image="../assets/2.png">
        <span
          class="image-option"
          style="background-image: url('../assets/2.png');"></span>
      </button>
      <button type="button" class="image-button" data-image="../assets/3.png">
        <span
          class="image-option"
          style="background-image: url('../assets/3.png');"></span>
      </button>
      <button type="button" class="image-button" data-image="../assets/4.png">
        <span
          class="image-option"
          style="background-image: url('../assets/4.png');"></span>
      </button>
    </div>
    <!-- Imagen previa seleccionada -->
    <div id="imagePreview" class="image-preview">
      <img
        src=""
        alt="Vista previa"
        id="previewImage"
        style="width: 100%; height: auto;"
      />
    </div>
  </div>

  <button type="submit" id="publicar">Publicar Blog</button>
</form>
<!-- Mensaje de confirmación -->
<div id="confirmationMessage" class="confirmation-message">
  Blog publicado exitosamente!
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("blogForm") as HTMLFormElement;
    const confirmationMessage = document.getElementById(
      "confirmationMessage"
    ) as HTMLDivElement;
    if (form) {
      form.addEventListener("submit", (event) => {
        event.preventDefault();

        const titleElement = document.getElementById(
          "title"
        ) as HTMLInputElement | null;
        const contentElement = document.getElementById(
          "content"
        ) as HTMLTextAreaElement | null;
        const imageSelectElement = document.querySelector(
          ".image-button.selected"
        ) as HTMLElement | null;

        if (titleElement && contentElement && imageSelectElement) {
          const title = titleElement.value;
          const content = contentElement.value;
          const imageUrl = imageSelectElement.getAttribute("data-image") || "";

          const blog = {
            title,
            content,
            date: new Date().toISOString(),
            image: imageUrl,
          };

          // Recuperar blogs existentes o inicializar un array vacío
          const blogs = JSON.parse(localStorage.getItem("blogs") || "[]");
          blogs.push(blog);

          // Guardar blogs actualizados en localStorage
          localStorage.setItem("blogs", JSON.stringify(blogs));

          // Limpiar el formulario
          form.reset();

          // Emitir evento para actualizar otros componentes
          document.dispatchEvent(
            new CustomEvent("blogAdded", { detail: blog })
          );
          // Mostrar mensaje de confirmación
          confirmationMessage.style.display = "block";

          // Ocultar mensaje después de 3 segundos
          setTimeout(() => {
            confirmationMessage.style.display = "none";
          }, 3000);
        } else {
          console.error("Formulario o elementos necesarios no encontrados.");
        }
      });
    } else {
      console.error("No se encontró el formulario con id 'blogForm'");
    }

    const imageButtons = document.querySelectorAll(".image-button");
    const previewImage = document.getElementById(
      "previewImage"
    ) as HTMLImageElement | null;

    if (previewImage) {
      imageButtons.forEach((button) => {
        button.addEventListener("click", (event) => {
          const selectedImage = button.getAttribute("data-image");
          if (selectedImage && previewImage) {
            previewImage.src = selectedImage;
          }

          // Resaltar el botón seleccionado
          imageButtons.forEach((btn) => btn.classList.remove("selected"));
          button.classList.add("selected");
        });
      });
    }
  });
</script>

<style>
  /* Contenedor principal del formulario */
  .blog-form {
    max-width: 100%; /* Aumenté el ancho */
    width: 800px;
    margin: 40px auto;
    padding: 30px;
    background: rgba(255, 255, 255, 0.178);
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(5px);
  }

  /* Inputs y textarea */
  .blog-form input,
  .blog-form textarea {
    width: 100%;
    margin-bottom: 15px;
    padding: 14px;
    border: 2px solid #cccccc60;
    border-radius: 8px;
    font-size: 16px;
    box-sizing: border-box;
  }

  /* Botón de publicar */
  #publicar {
    width: 100%;
    padding: 14px;
    background: linear-gradient(135deg, rgb(161, 119, 240), rgb(116, 90, 200));
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 16px;
    font-weight: bold;
  }

  .blog-form button:hover {
    background: linear-gradient(135deg, rgb(140, 95, 230), rgb(100, 75, 180));
  }

  /* Sección de selección de imagen */
  .image-selection {
    margin-bottom: 15px;
    text-align: center;
  }

  .image-selection label {
    display: block;
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #ffffff;
  }

  /* Contenedor de los botones de imagen */
  .image-buttons {
    display: flex;
    gap: 10px;
    justify-content: center;
    flex-wrap: wrap; /* Permite que las imágenes se ajusten en pantallas pequeñas */
  }

  /* Botón de selección de imagen */
  .image-button {
    width: 100px; /* Tamaño cuadrado */
    height: 100px;
    padding: 0;
    border: none;
    background: none;
    cursor: pointer;
    border-radius: 0;
    outline: none;
    transition: transform 0.2s ease-in-out;
  }

  /* Imagen dentro del botón */
  .image-option {
    display: block;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    border-radius: 0; /* Elimina cualquier borde */
  }

  /* Resaltar imagen seleccionada */
  .image-button.selected {
    transform: scale(1.1);
    outline: 3px solid rgba(255, 255, 255, 0.8);
  }
  /* Mensaje de confirmación */
  .confirmation-message {
    display: none;
    text-align: center;
    background: #4caf50;
    color: white;
    padding: 10px;
    border-radius: 8px;
    margin-top: 10px;
    font-size: 16px;
    font-weight: bold;
    animation: fadeIn 0.3s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  /* Responsivo */
  @media (max-width: 768px) {
    .blog-form {
      width: 95%;
      padding: 20px;
    }

    .image-button {
      width: 80px;
      height: 80px;
    }

    .blog-form input,
    .blog-form textarea {
      font-size: 14px;
    }

    .blog-form button {
      font-size: 14px;
      padding: 12px;
    }
  }
</style>
